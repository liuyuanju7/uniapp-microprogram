.highlight {
  color: #ff6773;
}
.baseStyle {
  padding: 16rpx;
  background-color: white;
  border-radius: 20rpx;
}
.image-style {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.border-radius {
  border-radius: 20rpx;
}
.base_button {
  width: 80%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 30rpx;
  box-shadow: 0 0px 10px #F5F5F5;
  background: linear-gradient(to right, #ed4264, #ffedbc);
  border-radius: 50rpx;
  margin: 20rpx auto;
}
.right-btn {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
  border-radius: 45px;
  box-shadow: 0 0 2px 0px #ff6773;
  width: 90rpx;
  height: 90rpx;
  color: #ffffff;
  background-color: #ff6773;
  font-size: 50rpx;
  right: 25px;
  bottom: 50px;
}
.base-input {
  background-color: #f3f4f6;
  padding: 30rpx;
  margin: 20rpx 28rpx;
  border-radius: 20rpx;
}
.line-hid {
  width: 200px;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.text-hh {
  word-break: break-all;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: pre-wrap;
}
.text-sl {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
page {
  background-color: #fff;
}
.album-header {
  background-size: cover;
  position: relative;
  background-position: center;
  height: 450rpx;
}
.album-header .album-bg {
  width: 100%;
  height: 100%;
}
.album-header .album-info {
  min-height: 180rpx;
  max-height: 250rpx;
  position: absolute;
  box-shadow: 0 10px 10px #F5F5F5;
  left: 0;
  right: 0;
  bottom: -80rpx;
  z-index: 1;
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: 0 auto;
  align-items: center;
  padding: 16rpx 28rpx;
}
.album-header .album-info .album-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.album-header .album-info .album-desc {
  font-size: 22rpx;
  padding-left: 16rpx;
  color: #909399;
}
.album-header .album-info .album-right {
  padding: 16rpx;
}
.album-header:after {
  position: absolute;
  left: 0;
  top: 0;
  content: '';
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 50%, #fff);
  width: 100%;
  height: 100%;
  opacity: 1;
}
.album-content {
  margin-top: 120rpx;
  padding: 0 10rpx;
}
.photo {
  height: 250rpx;
  width: 100%;
  overflow: hidden;
  margin-bottom: 12rpx;
}
.photo .album-image {
  width: 100%;
  height: 250rpx;
  border-radius: 20rpx;
}

