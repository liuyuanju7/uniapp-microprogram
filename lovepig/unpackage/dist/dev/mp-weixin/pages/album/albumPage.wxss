@charset "UTF-8";
/**
 * 下方引入的为uView UI的集成样式文件，为scss预处理器，其中包含了一些"u-"开头的自定义变量
 * uView自定义的css类名和scss变量，均以"u-"开头，不会造成冲突，请放心使用 
 */
.highlight {
  color: #ff6773;
}
.baseStyle {
  padding: 16rpx;
  background-color: white;
  border-radius: 20rpx;
}
.image-style {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.border-radius {
  border-radius: 20rpx;
}
.base_button {
  width: 80%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 30rpx;
  box-shadow: 0 0px 10px #F5F5F5;
  background: linear-gradient(to right, #ed4264, #ffedbc);
  border-radius: 50rpx;
  margin: 20rpx auto;
}
.right-btn {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
  border-radius: 45px;
  box-shadow: 0 0 2px 0px #ff6773;
  width: 90rpx;
  height: 90rpx;
  color: #ffffff;
  background-color: #ff6773;
  font-size: 50rpx;
  right: 25px;
  bottom: 50px;
}
.base-input {
  background-color: #f3f4f6;
  padding: 30rpx;
  margin: 20rpx 28rpx;
  border-radius: 20rpx;
}
.line-hid {
  width: 200px;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.text-hh {
  word-break: break-all;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: pre-wrap;
}
.text-sl {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
page {
  background-color: #fff;
}
.ap-header {
  margin: 28rpx 20rpx;
  height: 220rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.ap-header .aph-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.ap-header .aph-content {
  font-size: 26rpx;
  padding-left: 16rpx;
  color: #909399;
}
.ap-header .aph-right {
  width: 250rpx;
  height: 250rpx;
  margin: -50rpx 50rpx 0rpx 50rpx;
  flex-shrink: 0;
}
.ap-box {
  margin: 0 10rpx;
}
.ap-create {
  font-size: 120rpx;
  color: #ff6773;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 380rpx;
  background-color: #feeaec;
  margin-bottom: 20rpx;
}
.ap-item {
  height: 380rpx;
  background-color: white;
  border-radius: 20rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.ap-item .api-info {
  position: absolute;
  bottom: 0px;
  left: 0;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 0 0 20rpx 20rpx;
  height: 90rpx;
  width: 100%;
  color: white;
  text-align: center;
}
.ap-item .api-title {
  font-weight: bold;
  padding: 6rpx 0;
}
.ap-item .api-tip {
  font-size: 24rpx;
}
.create-main .create-title {
  text-align: center;
  font-weight: bold;
  font-size: 36rpx;
  line-height: 100rpx;
}
.create-main .textareaStyle {
  height: 150rpx;
  width: 100%;
}

