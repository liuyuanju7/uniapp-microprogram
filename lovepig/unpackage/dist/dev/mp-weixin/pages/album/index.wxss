@charset "UTF-8";
/**
 * 下方引入的为uView UI的集成样式文件，为scss预处理器，其中包含了一些"u-"开头的自定义变量
 * uView自定义的css类名和scss变量，均以"u-"开头，不会造成冲突，请放心使用 
 */
.highlight {
  color: #ff6773;
}
.baseStyle {
  padding: 16rpx;
  background-color: white;
  border-radius: 20rpx;
}
.image-style {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.border-radius {
  border-radius: 20rpx;
}
.base_button {
  width: 80%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 30rpx;
  box-shadow: 0 0px 10px #F5F5F5;
  background: linear-gradient(to right, #ed4264, #ffedbc);
  border-radius: 50rpx;
  margin: 20rpx auto;
}
.right-btn {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
  border-radius: 45px;
  box-shadow: 0 0 2px 0px #ff6773;
  width: 90rpx;
  height: 90rpx;
  color: #ffffff;
  background-color: #ff6773;
  font-size: 50rpx;
  right: 25px;
  bottom: 50px;
}
.base-input {
  background-color: #f3f4f6;
  padding: 30rpx;
  margin: 20rpx 28rpx;
  border-radius: 20rpx;
}
.line-hid {
  width: 200px;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.text-hh {
  word-break: break-all;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: pre-wrap;
}
.text-sl {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
page {
  background-color: #fff;
}
::-webkit-scrollbar {
  display: none;
}
.main {
  margin: 20rpx 0;
  padding: 0 10rpx;
}
.album-content {
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}
.scroll-X {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  border-radius: 20rpx;
}
.scroll-X .album-item {
  width: 560rpx;
  display: inline-block;
  margin-right: 20rpx;
  background-color: white;
  border-radius: 20rpx;
}
.scroll-X .album-box {
  width: 560rpx;
  position: relative;
}
.scroll-X .album-box .album-image {
  width: 560rpx;
  height: 430rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.scroll-X .album-name {
  margin: 20rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
}
.scroll-X .album-desc {
  font-size: 20rpx;
  margin: 20rpx;
  color: #909399;
  white-space: pre-wrap;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
}
.photo {
  margin: 0 10rpx 20rpx 10rpx;
  border-radius: 20rpx;
  background-color: white;
  max-height: 550rpx;
  overflow: hidden;
  display: flex;
}
.photo .photo-img {
  border-radius: 20rpx;
  width: 100%;
}

