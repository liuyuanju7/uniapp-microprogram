.highlight {
  color: #ff6773;
}
.baseStyle {
  padding: 16rpx;
  background-color: white;
  border-radius: 20rpx;
}
.image-style {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.border-radius {
  border-radius: 20rpx;
}
.base_button {
  width: 80%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 30rpx;
  box-shadow: 0 0px 10px #F5F5F5;
  background: linear-gradient(to right, #ed4264, #ffedbc);
  border-radius: 50rpx;
  margin: 20rpx auto;
}
.right-btn {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
  border-radius: 45px;
  box-shadow: 0 0 2px 0px #ff6773;
  width: 90rpx;
  height: 90rpx;
  color: #ffffff;
  background-color: #ff6773;
  font-size: 50rpx;
  right: 25px;
  bottom: 50px;
}
.base-input {
  background-color: #f3f4f6;
  padding: 30rpx;
  margin: 20rpx 28rpx;
  border-radius: 20rpx;
}
.line-hid {
  width: 200px;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.text-hh {
  word-break: break-all;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: pre-wrap;
}
.text-sl {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
page {
  background-color: #F5F5F5;
}
.love-time {
  margin: 28rpx 20rpx;
  display: flex;
  justify-content: space-around;
  position: relative;
  text-align: center;
  height: 380rpx;
  background-size: cover;
  border-radius: 20rpx;
  padding-top: 16rpx;
  color: white;
}
.love-time .love-time-info {
  display: flex;
  background-color: rgba(255, 255, 255, 0.3);
  justify-content: space-around;
  width: 80%;
  height: 145rpx;
  border-radius: 80rpx;
  padding: 16rpx 0;
}
.love-time .love-time-day {
  margin-top: 10rpx;
  font-size: 40rpx;
}
.love-time .we-name {
  font-size: 24rpx;
}
.love-time:after {
  position: absolute;
  left: 0;
  top: 0;
  content: '';
  background: white;
  width: 100%;
  height: 100%;
  opacity: 0;
  border-radius: 0 0 20rpx 20rpx;
}
.top-anniversary {
  height: 300rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: white;
  margin: 28rpx 20rpx;
  border-radius: 20rpx;
}
.love-anniversary {
  background-color: #ff6773;
}
.now-anniversary {
  background-image: url("https://lovestatic.jokeo.cn/love/202112/162303464498.jpg");
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  z-index: 10;
}
.now-anniversary .anniversary-title {
  font-weight: bold;
  font-size: 42rpx;
}
.now-anniversary .anniversary-info {
  margin-top: 20rpx;
}
.now-anniversary:after {
  position: absolute;
  left: 0;
  top: 0;
  content: '';
  background: rgba(0, 0, 0, 0.1);
  z-index: -1;
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.anniversary-main {
  margin: 0 20rpx;
}
.anniversary-main .anniversary-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  background-color: white;
  margin: 20rpx 0;
  border-radius: 20rpx;
  padding: 0 16rpx;
}
.anniversary-main .a-item-left {
  display: flex;
  align-items: center;
  justify-content: center;
}
.anniversary-main .a-item-content {
  margin-left: 20rpx;
}
.anniversary-main .a-item-name {
  font-weight: 600;
}
.anniversary-main .a-item-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  color: #909399;
  text-align: center;
  margin-top: 10rpx;
}
.anniversary-main .a-item-tip > view {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
}

