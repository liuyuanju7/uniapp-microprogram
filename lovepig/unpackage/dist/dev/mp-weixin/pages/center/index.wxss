@charset "UTF-8";
/**
 * 下方引入的为uView UI的集成样式文件，为scss预处理器，其中包含了一些"u-"开头的自定义变量
 * uView自定义的css类名和scss变量，均以"u-"开头，不会造成冲突，请放心使用 
 */
.highlight {
  color: #ff6773;
}
.baseStyle {
  padding: 16rpx;
  background-color: white;
  border-radius: 20rpx;
}
.image-style {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.border-radius {
  border-radius: 20rpx;
}
.base_button {
  width: 80%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 30rpx;
  box-shadow: 0 0px 10px #F5F5F5;
  background: linear-gradient(to right, #ed4264, #ffedbc);
  border-radius: 50rpx;
  margin: 20rpx auto;
}
.right-btn {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
  border-radius: 45px;
  box-shadow: 0 0 2px 0px #ff6773;
  width: 90rpx;
  height: 90rpx;
  color: #ffffff;
  background-color: #ff6773;
  font-size: 50rpx;
  right: 25px;
  bottom: 50px;
}
.base-input {
  background-color: #f3f4f6;
  padding: 30rpx;
  margin: 20rpx 28rpx;
  border-radius: 20rpx;
}
.line-hid {
  width: 200px;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.text-hh {
  word-break: break-all;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: pre-wrap;
}
.text-sl {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
page {
  background-color: #fff;
}
.top-img {
  width: 100%;
  height: 220rpx;
  overflow: hidden;
}
.my-maim {
  display: flex;
  align-items: center;
  height: 180rpx;
  background-color: white;
  padding: 16rpx;
  margin: 20rpx;
  margin-top: 0;
  border-radius: 20rpx;
}
.my-maim .my-avatar {
  margin-right: 30rpx;
}
.my-info .my-info-name {
  color: #303133;
  font-weight: bold;
  font-size: 36rpx;
  margin-bottom: 10rpx;
}
.my-info .my-info-motto {
  color: #606266;
}
.nav-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 20rpx;
  height: 90rpx;
}
.nav-item .nav-i-left {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 20rpx;
}
.nav-item .nav-i-title {
  font-size: 34rpx;
  font-weight: 500;
  padding-left: 16rpx;
}
.nav-item .nav-i-right {
  padding: 0 30rpx;
}
.memories-wrap {
  margin: 20rpx 0;
}
.header-wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx;
}
.header-wrap .header-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #303133;
  margin: 0 30rpx;
}
.header-wrap .header-tip {
  color: #909399;
  font-size: 18rpx;
}
.mode_item {
  text-align: center;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}
.mode_item .mode_image {
  width: 66rpx;
  height: 66rpx;
}

