@charset "UTF-8";
/**
 * 下方引入的为uView UI的集成样式文件，为scss预处理器，其中包含了一些"u-"开头的自定义变量
 * uView自定义的css类名和scss变量，均以"u-"开头，不会造成冲突，请放心使用 
 */
.highlight {
  color: #ff6773;
}
.baseStyle {
  padding: 16rpx;
  background-color: white;
  border-radius: 20rpx;
}
.image-style {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.border-radius {
  border-radius: 20rpx;
}
.base_button {
  width: 80%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 30rpx;
  box-shadow: 0 0px 10px #F5F5F5;
  background: linear-gradient(to right, #ed4264, #ffedbc);
  border-radius: 50rpx;
  margin: 20rpx auto;
}
.right-btn {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
  border-radius: 45px;
  box-shadow: 0 0 2px 0px #ff6773;
  width: 90rpx;
  height: 90rpx;
  color: #ffffff;
  background-color: #ff6773;
  font-size: 50rpx;
  right: 25px;
  bottom: 50px;
}
.base-input {
  background-color: #f3f4f6;
  padding: 30rpx;
  margin: 20rpx 28rpx;
  border-radius: 20rpx;
}
.line-hid {
  width: 200px;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.text-hh {
  word-break: break-all;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: pre-wrap;
}
.text-sl {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.love-time {
  height: 100vh;
  width: 100vw;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-top: 16rpx;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  position: relative;
  transition: all 1s;
}
.love-btn {
  margin: 90%;
}
.message {
  z-index: 100;
  margin-bottom: 28rpx;
  margin-top: -30rpx;
  border-radius: 20rpx 20rpx 0 0;
  background-color: white;
  padding: 16rpx;
}
.message .msg-send {
  padding: 8rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  background-color: #f3f4f6;
}
.message .msg-send .msg-send-input {
  width: 100%;
  font-size: 28rpx;
}
.message .msg-send .msg-send-input,
.message .msg-send .uni-textarea {
  min-height: 20px;
  max-height: 150px;
}
.message .msg-send .msg-send-btn {
  padding: 0 16rpx;
}
.message .we-like {
  width: 100%;
  height: 100rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
}
.message .we-like .we-like-item {
  width: 49%;
  display: flex;
  height: 100rpx;
  color: white;
  border-radius: 20rpx;
  background: linear-gradient(to right, #a6ffcb, #12d8fa);
  text-align: center;
  align-items: center;
}
.message .we-like .we-like-woman {
  background: linear-gradient(to right, #ed4264, #ffedbc) !important;
  justify-content: flex-end;
}
.message .we-like .people-image {
  width: 100rpx;
  height: 100rpx;
}
.message .we-like .we-like-content {
  line-height: 50rpx;
  width: 60%;
}
.message .message-main {
  height: 288rpx;
}
.message .message-item {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
  flex-wrap: nowrap;
  flex-direction: row;
  width: 49vw;
  background: white;
  box-shadow: 0 6rpx 12rpx rgba(233, 238, 249, 0.9);
  margin-bottom: 20rpx;
  word-break: break-all;
  border-radius: 20rpx;
}
.message .message-content {
  background: white;
  padding: 16rpx;
  word-break: break-all;
  border-radius: 20rpx;
}
.todo .todo-main .todo-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 60rpx;
  border-radius: 20rpx;
  padding: 16rpx;
  margin-bottom: 20rpx;
  background-color: white;
}

