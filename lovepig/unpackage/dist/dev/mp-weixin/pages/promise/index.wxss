@charset "UTF-8";
/**
 * 下方引入的为uView UI的集成样式文件，为scss预处理器，其中包含了一些"u-"开头的自定义变量
 * uView自定义的css类名和scss变量，均以"u-"开头，不会造成冲突，请放心使用 
 */
.highlight {
  color: #ff6773;
}
.baseStyle {
  padding: 16rpx;
  background-color: white;
  border-radius: 20rpx;
}
.image-style {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.border-radius {
  border-radius: 20rpx;
}
.base_button {
  width: 80%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 30rpx;
  box-shadow: 0 0px 10px #F5F5F5;
  background: linear-gradient(to right, #ed4264, #ffedbc);
  border-radius: 50rpx;
  margin: 20rpx auto;
}
.right-btn {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
  border-radius: 45px;
  box-shadow: 0 0 2px 0px #ff6773;
  width: 90rpx;
  height: 90rpx;
  color: #ffffff;
  background-color: #ff6773;
  font-size: 50rpx;
  right: 25px;
  bottom: 50px;
}
.base-input {
  background-color: #f3f4f6;
  padding: 30rpx;
  margin: 20rpx 28rpx;
  border-radius: 20rpx;
}
.line-hid {
  width: 200px;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.text-hh {
  word-break: break-all;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: pre-wrap;
}
.text-sl {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.main {
  margin: 28rpx;
}
.todo-main .todo-item {
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  color: #606266;
}
.todo-main .todo-item .todo-item-info {
  display: flex;
}
.todo-main .todo-item .todo-item-info .content {
  padding-left: 14rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.todo-main .todo-item .todo-item-info .desc {
  display: block;
}
.todo-count {
  display: flex;
  height: 200rpx;
  background-image: linear-gradient(to right, #f78ca0 0%, #f9748f 19%, #fd868c 60%, #fe9a8b 100%);
  margin-bottom: 28rpx;
  border-radius: 20rpx;
  color: white;
}
.todo-count .todo-count-item {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100%;
}
.todo-count .todo-count-item .todo-num {
  margin-bottom: 20rpx;
  font-size: 66rpx;
}

